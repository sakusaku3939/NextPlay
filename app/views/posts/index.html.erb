<p style="color: green"><%= notice %></p>

<div class="logo">NextPlay</div>

<% if user_signed_in? %>
  <p>You are <%= current_user.email %></p>
  <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
<% else %>
  <%= link_to 'Login', new_user_session_path %>
<% end %>

<div class="container">
  <div class="posts-container">
    <% @posts.each do |post| %>
      <%= render post %>
    <% end %>
  </div>
  <div class="sidebar-container">
    <%= link_to "投稿する", new_post_path, class: "new-post-button" %>
    <div class="card stream-container">
      <p>配信中のゲーム一覧</p>
      <% @streams.each do |stream| %>
        <div class="stream">
          <%= render 'stream_button', stream: stream %>
          <p>@<%= stream.username %> さんの配信</p>
        </div>
      <% end %>
    </div>
  </div>
</div>

